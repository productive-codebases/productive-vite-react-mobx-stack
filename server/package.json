  "main": "index.js",
  "scripts": {
    "prepare:dist": "shx cp -r .env configs templates dist/server",
    "clean:dist": "shx rm -rf dist && shx mkdir -p dist/server",
    "build:prod": "npm run clean:dist && npm run prepare:dist && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint:code": "eslint . --ext .ts,.tsx --quiet",
    "check:code": "tsc --noEmit",
    "format:code": "prettier --write src",
    "start:dev": "cross-env NODE_ENV=development DEBUG=server:* nodemon --config nodemon.json",
    "start:prod": "cross-env DEBUG=server:* node dist/server/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
