    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.10",
    "esbuild": "^0.15.18",
    "esbuild-register": "^3.4.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3"
  },
